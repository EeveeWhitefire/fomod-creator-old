<controls:MetroWindow x:Class="MainApplication.Shell"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:local="clr-namespace:MainApplication"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:base="clr-namespace:FomodModel.Base;assembly=FomodModel"
                      xmlns:region="http://prismlibrary.com/"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:names="clr-namespace:FomodInfrastructure;assembly=FomodInfrastructure"
                      Title="MainWindow"
                      Width="1000"
                      Height="800"
                      RenderOptions.ClearTypeHint="Enabled"
                      TextOptions.TextFormattingMode="Display"
                      WindowStartupLocation="CenterScreen"
                      GlowBrush="{DynamicResource AccentColorBrush}"
                      mc:Ignorable="d">
    <Grid>
        <controls:MetroAnimatedSingleRowTabControl region:RegionManager.RegionName="{x:Static names:Names.MainContentRegion}">
            <TabControl.ItemTemplate>
                <DataTemplate DataType="TabItem">
                    <Grid MaxWidth="250">

                        <TextBlock Text="{Binding Content.DataContext.Header, RelativeSource={RelativeSource AncestorType=TabItem, Mode=FindAncestor}}"
                                   TextTrimming="CharacterEllipsis"
                                   ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}" >
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <!--<Trigger Property="Text" Value="{x:Null}">
                                            <Setter Property="Text" Value="{Binding Content.DataContext.Data[0].ModuleInformation.Name, RelativeSource={RelativeSource AncestorType=TabItem, Mode=FindAncestor}}"/>
                                        </Trigger>-->
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                            </TextBlock>
                        <Border x:Name="close_button"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Stretch"
                                Padding="30,0,0,0"
                                Background="{Binding Background, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type controls:MetroWindow}}}">
                            <Border.OpacityMask>
                                <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0,0.5" EndPoint="1,0.5">
                                    <GradientStop Offset="0" Color="Transparent" />
                                    <GradientStop Offset="1" Color="Black" />
                                    <GradientStop Offset="0.65" Color="Black" />
                                </LinearGradientBrush>
                            </Border.OpacityMask>
                            <Button Margin="0,0,3,8"
                                    VerticalAlignment="Bottom"
                                    Background="Yellow"
                                    Command="{Binding DataContext.CloseTab, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=controls:MetroWindow}}"
                                    CommandParameter="{Binding Content.DataContext, RelativeSource={RelativeSource AncestorType=TabItem, Mode=FindAncestor}}"
                                    Style="{StaticResource DeleteButton}" />
                        </Border>
                    </Grid>
                    <DataTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="false">
                            <Setter TargetName="close_button" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                        <DataTrigger Binding="{Binding Content.DataContext.Header, RelativeSource={RelativeSource AncestorType=TabItem, Mode=FindAncestor}}"
                                     Value="Welcome">
                            <Setter TargetName="close_button" Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </TabControl.ItemTemplate>
        </controls:MetroAnimatedSingleRowTabControl>
    </Grid>
</controls:MetroWindow>