<Window x:Class="MainApplication.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainApplication"
        xmlns:region="http://prismlibrary.com/"
        xmlns:names="clr-namespace:FomodInfrastructure;assembly=FomodInfrastructure"
        Title="MainWindow"
        Width="525"
        Height="350"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        mc:Ignorable="d">
    <Grid>
        <TabControl region:RegionManager.RegionName="{x:Static names:Names.MainContentRegion}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Content.DataContext.Header, RelativeSource={RelativeSource AncestorType=TabItem, Mode=FindAncestor}}" />
                </DataTemplate>
            </TabControl.ItemTemplate>
        </TabControl>
        <ContentControl region:RegionManager.RegionName="{x:Static names:Names.TopRegion}" />
    </Grid>
</Window>
