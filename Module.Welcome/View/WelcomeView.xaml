<UserControl x:Class="Module.Welcome.View.WelcomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:regions="http://prismlibrary.com/"
             xmlns:struct="clr-namespace:FomodInfrastructure;assembly=FomodInfrastructure"
             d:DesignHeight="320"
             d:DesignWidth="1100"
             dialog:DialogParticipation.Register="{Binding}"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="7*" />
        </Grid.ColumnDefinitions>
        <Rectangle Grid.ColumnSpan="2"
                   Height="1"
                   VerticalAlignment="Top"
                   Panel.ZIndex="99"
                   Fill="{DynamicResource SeparatorBrush}" />
        <Rectangle Grid.Column="0"
                   Width="1"
                   HorizontalAlignment="Right"
                   Panel.ZIndex="99"
                   Fill="{DynamicResource SeparatorBrush}" />
        <ContentControl Grid.Column="0"
                        Margin="6 6 0 6"
                        regions:RegionManager.RegionName="{x:Static struct:Names.LeftRegion}" />
        <GridSplitter Grid.Column="1"
                      Width="4"
                      Margin="0"
                      HorizontalAlignment="Left"
                      Panel.ZIndex="100"
                      Background="Transparent" />
        <Border Grid.Column="1"
                MinWidth="250"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="#11FFFFFF"
                BorderThickness="1"
                CornerRadius="6"
                Padding="42,21,42,18"
                SnapsToDevicePixels="True">
            <StackPanel>
                <TextBlock Margin="0,0,0,21"
                           HorizontalAlignment="Center"
                           DockPanel.Dock="Top"
                           FontFamily="Segoe UI Light"
                           FontSize="18"
                           Text="Welcome!" />
                <Button Margin="3"
                        Command="{Binding CreateProjectCommand}"
                        Content="Create project"
                        Style="{DynamicResource GreenButton}" />
                <Button Margin="3"
                        Command="{Binding OpenProjectCommand}"
                        Content="Open project"
                        Style="{DynamicResource GreenButton}" />
                <Button Margin="3"
                        Command="{Binding CloseApplicationCommand}"
                        Content="Close program"
                        Style="{DynamicResource RedButton}" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>