<UserControl x:Class="Module.Welcome.View.WelcomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Module.Welcome.View"
             d:DesignHeight="300"
             d:DesignWidth="600"
             Background="White"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border x:Name="border"
                MinWidth="250"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="White"
                BorderBrush="LightGray"
                CornerRadius="6"
                Padding="42,21,42,18"
                BorderThickness="1"
                SnapsToDevicePixels="True">
            <StackPanel>
                <TextBlock Margin="0,0,0,21"
                           HorizontalAlignment="Center"
                           Foreground="Gray"
                           Text="Добро пожаловать!"
                           DockPanel.Dock="Top"
                           FontSize="18"
                           FontFamily="Segoe UI Light" />
                <Button Margin="3"
                        Content="Открыть проект"
                        Command="{Binding OpenProject}"
                        Style="{DynamicResource GreenButton}" />
                <Button Margin="3"
                        Content="Выход из программы"
                        Command="{Binding CloseApplication}"
                        Style="{DynamicResource RedButton}" />

            </StackPanel>
        </Border>




    </Grid>
</UserControl>
