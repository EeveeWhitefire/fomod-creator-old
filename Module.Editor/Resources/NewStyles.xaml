<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">
    <Thickness x:Key="DefMargin"
               Left="6"
               Top="3"
               Right="6"
               Bottom="3" />

    <ControlTemplate x:Key="DefGroupBoxTemplate"
                     TargetType="{x:Type GroupBox}">
        <Grid x:Name="GroupBoxRoot">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border x:Name="HeaderSite"
                    Grid.Row="0"
                    Padding="6,6"
                    TextBlock.FontSize="14"
                    BorderBrush="{x:Null}"
                    BorderThickness="0"
                    Background="{TemplateBinding Background}"
                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                    UseLayoutRounding="True">
                <ContentControl Content="{TemplateBinding Header}" />
            </Border>
            <Border Grid.Row="1"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="1,0,1,1"
                    Background="Transparent"
                    Padding="3"
                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                    UseLayoutRounding="True">
                <ContentPresenter Margin="{TemplateBinding Padding}"
                                  Cursor="{TemplateBinding Cursor}"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  Content="{TemplateBinding Content}"
                                  UseLayoutRounding="False" />
            </Border>
        </Grid>
    </ControlTemplate>
    <Style x:Key="DefTestBlockStyle"
           TargetType="{x:Type TextBlock}">
        <Setter Property="Padding" Value="{StaticResource DefMargin}" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="FontSize" Value="14" />
    </Style>
    <Style x:Key="DefTestBoxStyle"
           TargetType="{x:Type TextBox}">
        <Setter Property="Margin" Value="{StaticResource DefMargin}" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="TextAlignment" Value="Left" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <!--  BasedOn="{StaticResource {x:Type ComboBox}}"  -->
    <Style x:Key="DefComboBoxStyle"
           TargetType="{x:Type ComboBox}">
        <Setter Property="Margin" Value="{StaticResource DefMargin}" />
        <Setter Property="Padding" Value="0" />
    </Style>

    <Style TargetType="{x:Type GroupBox}">
        <Setter Property="Template" Value="{StaticResource DefGroupBoxTemplate}" />
        <Setter Property="Background" Value="DarkOliveGreen" />
        <Setter Property="BorderBrush" Value="DarkOliveGreen" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Margin" Value="6" />
    </Style>

</ResourceDictionary>
