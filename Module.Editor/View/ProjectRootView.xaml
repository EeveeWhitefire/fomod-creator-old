<UserControl x:Class="Module.Editor.View.ProjectRootView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="800"
             d:DesignWidth="1200"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Enums.xaml" />
                <ResourceDictionary Source="../Resources/Config/CompositeDependencyTemplate.xaml" />
                <ResourceDictionary Source="../Resources/Config/InformationTemplate.xaml" />
                <ResourceDictionary Source="../Resources/Config/NameTemplate.xaml" />
                <ResourceDictionary Source="../Resources/Config/ImageTemplate.xaml" />
                <ResourceDictionary Source="../Resources/Config/OtherTemplate.xaml" />
                <ResourceDictionary Source="../Resources/Config/FileListTemplate.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Thickness x:Key="DefMargin"
                       Left="6"
                       Top="3"
                       Right="6"
                       Bottom="3" />

            <ControlTemplate x:Key="DefGroupBoxTemplate"
                             TargetType="{x:Type GroupBox}">
                <Grid x:Name="GroupBoxRoot">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Border x:Name="HeaderSite"
                            Grid.Row="0"
                            Padding="6,6"
                            TextBlock.FontSize="14"
                            BorderBrush="{x:Null}"
                            BorderThickness="0"
                            Background="{TemplateBinding Background}"
                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                            UseLayoutRounding="True">
                        <ContentControl Content="{TemplateBinding Header}" />
                    </Border>
                    <Border Grid.Row="1"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1,0,1,1"
                            Background="Transparent"
                            Padding="3"
                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                            UseLayoutRounding="True">
                        <ContentPresenter Margin="{TemplateBinding Padding}"
                                          Cursor="{TemplateBinding Cursor}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                          Content="{TemplateBinding Content}"
                                          UseLayoutRounding="False" />
                    </Border>
                </Grid>
            </ControlTemplate>
            <Style x:Key="DefTestBlockStyle"
                   TargetType="{x:Type TextBlock}">
                <Setter Property="Padding" Value="{StaticResource DefMargin}" />
                <Setter Property="VerticalAlignment" Value="Top" />
                <Setter Property="FontSize" Value="14" />
            </Style>
            <Style x:Key="DefTestBoxStyle"
                   TargetType="{x:Type TextBox}">
                <Setter Property="Margin" Value="{StaticResource DefMargin}" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="TextAlignment" Value="Left" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="TextWrapping" Value="Wrap" />
            </Style>

            <!--BasedOn="{StaticResource {x:Type ComboBox}}"-->
            <Style x:Key="DefComboBoxStyle"
                   
                   TargetType="{x:Type ComboBox}">
                <Setter Property="Margin" Value="{StaticResource DefMargin}" />
            </Style>

            <Style TargetType="{x:Type GroupBox}">
                <Setter Property="Template" Value="{StaticResource DefGroupBoxTemplate}" />
                <Setter Property="Background" Value="DarkOliveGreen" />
                <Setter Property="BorderBrush" Value="DarkOliveGreen" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="Margin" Value="6" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Grid.IsSharedSizeScope="True">
        <ScrollViewer>
            <StackPanel MaxWidth="1000">
                <GroupBox Header="Mod info"
                          DataContext="{Binding Data.ModuleInformation}">
                    <Grid>
                        <Grid.Resources>
                            <Style TargetType="{x:Type TextBlock}"
                                   BasedOn="{StaticResource DefTestBlockStyle}" />
                            <Style TargetType="{x:Type TextBox}"
                                   BasedOn="{StaticResource DefTestBoxStyle}" />
                            <Style TargetType="{x:Type ComboBox}"
                                   BasedOn="{StaticResource DefComboBoxStyle}" />
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"
                                              SharedSizeGroup="Column1" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Grid.Column="0"
                                   Text="ModuleName" />
                        <TextBlock Grid.Row="1"
                                   Grid.Column="0"
                                   Text="Autor" />
                        <TextBlock Grid.Row="2"
                                   Grid.Column="0"
                                   Text="Version" />
                        <TextBlock Grid.Row="3"
                                   Grid.Column="0"
                                   Text="Website" />
                        <TextBlock Grid.Row="4"
                                   Grid.Column="0"
                                   Text="Category" />
                        <TextBlock Grid.Row="5"
                                   Grid.Column="0"
                                   Text="Description" />

                        <TextBox Grid.Row="0"
                                 Grid.Column="1"
                                 Text="{Binding Name}" />
                        <TextBox Grid.Row="1"
                                 Grid.Column="1"
                                 Text="{Binding Author}" />
                        <TextBox Grid.Row="2"
                                 Grid.Column="1"
                                 Text="{Binding Version}" />
                        <TextBox Grid.Row="3"
                                 Grid.Column="1"
                                 Text="{Binding Website}" />
                        <ComboBox xmlns:converters="clr-namespace:FomodInfrastructure.Converters;assembly=FomodInfrastructure"
                                  xmlns:base="clr-namespace:FomodModel.Base;assembly=FomodModel"
                                  Grid.Row="4"
                                  Grid.Column="1"
                                  DisplayMemberPath=""
                                  SelectedItem="{Binding CategoryId, Mode=TwoWay}"
                                  ItemsSource="{converters:EnumValues {x:Type base:CategoriesEnum}}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Mode=OneTime, Converter={StaticResource EnumValueToDecriptionConverter}}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <TextBox Grid.Row="5"
                                 Grid.Column="1"
                                 HorizontalScrollBarVisibility="Disabled"
                                 VerticalScrollBarVisibility="Disabled"
                                 Text="{Binding Description}" />
                    </Grid>


                </GroupBox>
                <GroupBox Header="Module name"
                          DataContext="{Binding Data.ModuleConfiguration.ModuleName}">
                    <Grid>
                        <Grid.Resources>
                            <Style TargetType="{x:Type TextBlock}"
                                   BasedOn="{StaticResource DefTestBlockStyle}" />
                            <Style TargetType="{x:Type TextBox}"
                                   BasedOn="{StaticResource DefTestBoxStyle}" />
                            <Style TargetType="{x:Type ComboBox}"
                                   BasedOn="{StaticResource DefComboBoxStyle}" />
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"
                                              SharedSizeGroup="Column1" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Grid.Column="0"
                                   Text="Module Name" />
                        <TextBlock Grid.Row="1"
                                   Grid.Column="0"
                                   Text="Color" />
                        <TextBlock Grid.Row="2"
                                   Grid.Column="0"
                                   Text="Possition" />


                        <TextBox Grid.Row="0"
                                 Grid.Column="1"
                                 Text="{Binding Value}" />
                        <StackPanel Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="{StaticResource DefMargin}">
                            <Border Height="20"
                                    Background="Coral" />
                            <TextBox Margin="0,3"
                                     Text="{Binding Colour}" />
                        </StackPanel>
                        <ComboBox Grid.Row="2"
                                  Grid.Column="1"
                                  ItemsSource="{Binding Source={StaticResource ModuleTitlePositionEnum}}"
                                  SelectedValue="{Binding Position}" />

                    </Grid>


                </GroupBox>

                <GroupBox Header="Others"
                          DataContext="{Binding Data.ModuleConfiguration.InstallSteps}">
                    <Grid>
                        <Grid.Resources>
                            <Style TargetType="{x:Type TextBlock}"
                                   BasedOn="{StaticResource DefTestBlockStyle}" />
                            <Style TargetType="{x:Type TextBox}"
                                   BasedOn="{StaticResource DefTestBoxStyle}" />
                            <Style TargetType="{x:Type ComboBox}"
                                   BasedOn="{StaticResource DefComboBoxStyle}" />
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"
                                              SharedSizeGroup="Column1" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0"
                                   Grid.Column="0"
                                   Text="Module Name" />

                        <ComboBox Grid.Row="0"
                                  Grid.Column="1"
                                  ItemsSource="{Binding Source={StaticResource OrderEnum}}"
                                  SelectedValue="{Binding Order}" />

                    </Grid>


                </GroupBox>

                <!--<ContentControl Content="{Binding Data.ModuleInformation}" ContentTemplate="{StaticResource InformationTemplate}" />
                <ContentControl Content="{Binding Data.ModuleConfiguration.ModuleName}" ContentTemplate="{StaticResource ModuleName}" />-->
                <!--<ContentControl Content="{Binding ''}"
                                ContentTemplate="{StaticResource OtherTemplate}" />-->

                <ContentControl Content="{Binding Data.ModuleConfiguration.ModuleImage}">
                    <ContentControl.Style>
                        <Style TargetType="{x:Type ContentControl}">
                            <Style.Triggers>
                                <Trigger Property="Content" Value="{x:Null}">
                                    <Setter Property="ContentTemplate" Value="{StaticResource NullHeaderImage}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>

                <ContentControl Content="{Binding Data.ModuleConfiguration.ModuleDependencies}">
                    <ContentControl.Style>
                        <Style TargetType="{x:Type ContentControl}">
                            <Style.Triggers>
                                <Trigger Property="Content" Value="{x:Null}">
                                    <Setter Property="ContentTemplate" Value="{StaticResource NullDependencies}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>
                <ContentControl ContentTemplate="{StaticResource FileList}"
                                Content="{Binding Data.ModuleConfiguration.RequiredInstallFiles}">
                    <!--<ContentControl.Style>
                        <Style TargetType="{x:Type ContentControl}">
                            <Style.Triggers>
                                <Trigger Property="Content" Value="{x:Null}">
                                    <Setter Property="ContentTemplate" Value="{StaticResource NullFileList}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>-->
                </ContentControl>
            </StackPanel>
        </ScrollViewer>


    </Grid>
</UserControl>