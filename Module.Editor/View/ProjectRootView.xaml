<UserControl x:Class="Module.Editor.View.ProjectRootView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="800"
             d:DesignWidth="1200"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Enums.xaml" />
                <ResourceDictionary Source="../Resources/Config/Styles.xaml" />
                <ResourceDictionary Source="../Resources/Config/CompositeDependencyTemplate.xaml" />
                <ResourceDictionary Source="../Resources/Config/InformationTemplate.xaml" />
                <ResourceDictionary Source="../Resources/Config/NameTemplate.xaml" />
                <ResourceDictionary Source="../Resources/Config/ImageTemplate.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Grid.IsSharedSizeScope="True">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Hidden">
            <StackPanel MaxWidth="1000">
                <ContentControl Content="{Binding Data.ModuleInformation}"
                                ContentTemplate="{StaticResource ModuleInformation}" />
                <ContentControl Content="{Binding Data.ModuleConfiguration.ModuleName}"
                                ContentTemplate="{StaticResource ModuleName}" />
                <ContentControl Content="{Binding Data.ModuleConfiguration.ModuleImage}">
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Style.Triggers>
                                <Trigger Property="Content" Value="{x:Null}">
                                    <Setter Property="ContentTemplate" Value="{StaticResource NullHeaderImage}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>
                <GroupBox Header="Other">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition SharedSizeGroup="a1" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="InstallSteps Order" />
                        <ComboBox ItemsSource="{Binding Source={StaticResource OrderEnum}}"
                                  SelectedValue="{Binding Data.ModuleConfiguration.InstallSteps.Order}" />
                    </Grid>
                </GroupBox>

                <ContentControl Content="{Binding Data.ModuleConfiguration.ModuleDependencies}" >
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Style.Triggers>
                                <Trigger Property="Content" Value="{x:Null}">
                                    <Setter Property="ContentTemplate" Value="{StaticResource NullDependencies}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>

            </StackPanel>
        </ScrollViewer>


    </Grid>
</UserControl>