<UserControl x:Class="Module.Editor.View.pluginFlagsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:xmlsys="clr-namespace:System.Xml;assembly=System.Xml"
             xmlns:dialogs="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d"
             dialogs:DialogParticipation.Register="{Binding}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Module.Editor;component/Resource/Enums.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate x:Key="flagTemplate" DataType="flag">
                <DockPanel>
                    <ComboBox ItemsSource="{StaticResource flagValueEnum}"
                              SelectedValue="{Binding XPath=text()}"
                              DockPanel.Dock="Left" />
                    <Button Content="x"
                            DockPanel.Dock="Right"
                            Command="{Binding DataContext.RemoveFlag, RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}}"
                            CommandParameter="{Binding}"
                            Style="{DynamicResource SquareButtonStyle}"/>
                    <TextBox Text="{Binding XPath=@name, StringFormat='flag: {0}'}" DockPanel.Dock="Left" />
                </DockPanel>
            </DataTemplate>
            <DataTemplate x:Key="XmlNodeTemplate" DataType="{x:Type xmlsys:XmlNode}">
                <ContentControl x:Name="content" Content="{Binding}" />
                <DataTemplate.Triggers>
                    <DataTrigger Binding="{Binding Name}" Value="flag">
                        <Setter TargetName="content" Property="ContentTemplate" Value="{StaticResource flagTemplate}" />
                    </DataTrigger>
                </DataTemplate.Triggers>
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel>
        <ContentControl>
            <ContentControl.Resources>
                <DataTemplate x:Key="NotRemoveFlagTemplate" DataType="conditionFlags">
                    <GroupBox Margin="3">
                        <GroupBox.Header>
                            <DockPanel DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}}">
                                <TextBlock Text="Группа флагов" DockPanel.Dock="Left"/>
                                <Button DockPanel.Dock="Right"
                                        Content="Add flag"
                                        Command="{Binding AddFlag}"
                                        CommandParameter="{Binding}"
                                        Style="{DynamicResource SquareButtonStyle}"/>
                            </DockPanel>
                        </GroupBox.Header>
                        <ListBox ItemTemplate="{StaticResource XmlNodeTemplate}" ItemsSource="{Binding XPath=./*}" />
                    </GroupBox>
                </DataTemplate>
                <DataTemplate x:Key="RemoveFlagTemplate" DataType="conditionFlags">
                    <GroupBox Margin="3">
                        <GroupBox.Header>
                            <DockPanel DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}}">
                                <TextBlock Text="Группа флагов" DockPanel.Dock="Left" />
                                <Button DockPanel.Dock="Right"
                                        Content="Remove Flags Group"
                                        Command="{Binding RemoveFlagsGroup}"
                                        CommandParameter="{Binding}"
                                        Style="{DynamicResource SquareButtonStyle}"/>
                                <Button DockPanel.Dock="Right"
                                        Content="Add flag"
                                        Command="{Binding AddFlag}"
                                        CommandParameter="{Binding}"
                                        Style="{DynamicResource SquareButtonStyle}"/>
                            </DockPanel>
                        </GroupBox.Header>
                        <ListBox ItemTemplate="{StaticResource XmlNodeTemplate}" ItemsSource="{Binding XPath=./*}" />
                    </GroupBox>
                </DataTemplate>
            </ContentControl.Resources>
            <ContentControl.Template>
                <ControlTemplate>
                    <StackPanel>
                        <Button x:Name="FlagAddButton"
                                Margin="3"
                                Content="Add flags group"
                                Command="{Binding AddFlagsGroup}"
                                Style="{DynamicResource SquareButtonStyle}"/>
                        <ItemsControl x:Name="FlagList"
                                      DataContext="{Binding XmlNode}"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                      ItemsSource="{Binding XPath=conditionFlags}" />
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <DataTrigger Value="false" Binding="{Binding DataContext.IsFilesFoldersFlags, RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}}">
                            <Setter TargetName="FlagList" Property="ItemTemplate" Value="{StaticResource NotRemoveFlagTemplate}" />
                            <Setter TargetName="FlagAddButton" Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                        <DataTrigger Value="true" Binding="{Binding DataContext.IsFilesFoldersFlags, RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}}">
                            <Setter TargetName="FlagList" Property="ItemTemplate" Value="{StaticResource RemoveFlagTemplate}" />
                            <Setter TargetName="FlagAddButton" Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </ContentControl.Template>
        </ContentControl>
    </StackPanel>
</UserControl>
