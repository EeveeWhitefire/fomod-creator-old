<UserControl x:Class="Module.Editor.View.Plugin.PluginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:view="clr-namespace:Module.Editor.View"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:enum="clr-namespace:FomodModel.Base.ModuleCofiguration.Enum;assembly=FomodModel"
             xmlns:moduleCofiguration="clr-namespace:FomodModel.Base.ModuleCofiguration;assembly=FomodModel"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ObjectDataProvider x:Key="DataFromEnum" MethodName="GetValues" ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enum:PluginTypeEnum"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>
    <GroupBox Header="Plugin" DataContext="{Binding Data}">
        <controls:MetroAnimatedSingleRowTabControl>
            <TabItem controls:ControlsHelper.HeaderFontSize="18" Header="Инфо">
                <DockPanel>
                    <TextBox DockPanel.Dock="Top"
                             VerticalAlignment="Top"
                             MaxHeight="38"
                             Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             controls:TextBoxHelper.Watermark="Название плагина"
                             controls:TextBoxHelper.UseFloatingWatermark="True"
                             controls:TextBoxHelper.ClearTextButton="True"/>
                    <ComboBox DockPanel.Dock="Top"
                              VerticalAlignment="Top"
                              controls:TextBoxHelper.Watermark="Тип плагина"
                              ItemsSource="{Binding Source={StaticResource DataFromEnum}}"
                              SelectedValue="{Binding TypeDescriptor.DependencyType.DefaultType.Name}" />
                    <TextBox AcceptsReturn="True"
                             TextWrapping="Wrap"
                             Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             controls:TextBoxHelper.Watermark="Описание плагина"
                             controls:TextBoxHelper.UseFloatingWatermark="True"/>
                </DockPanel>
            </TabItem>
            <TabItem controls:ControlsHelper.HeaderFontSize="18" Header="Флаги">
                
            </TabItem>
            <TabItem controls:ControlsHelper.HeaderFontSize="18" Header="Зависимости">

            </TabItem>
            <TabItem controls:ControlsHelper.HeaderFontSize="18" Header="Файлы и папки">
                <ListBox ItemsSource="{Binding Files.Items}">
                    <ListBox.Resources>
                        <DataTemplate DataType="{x:Type moduleCofiguration:FileSystemItem}">
                            <TextBlock Height="16"
                                   VerticalAlignment="Center"
                                   Text="Я файл"
                                   TextTrimming="CharacterEllipsis"
                                   ToolTip="{Binding Source, RelativeSource={RelativeSource Self}}" />
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type moduleCofiguration:FolderSystemItem}">
                            <TextBlock Height="16"
                                   VerticalAlignment="Center"
                                   Text="Я папка"
                                   TextTrimming="CharacterEllipsis"
                                   ToolTip="{Binding Source, RelativeSource={RelativeSource Self}}" />
                        </DataTemplate>
                    </ListBox.Resources>
                </ListBox>
            </TabItem>
        </controls:MetroAnimatedSingleRowTabControl>
    </GroupBox>
</UserControl>