<UserControl x:Class="Module.Editor.View.MainEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Module.Editor.View"
             xmlns:linq2Xml="clr-namespace:System.Xml.Linq;assembly=System.Xml.Linq"
             xmlns:xmlsys="clr-namespace:System.Xml;assembly=System.Xml"
             xmlns:model="clr-namespace:FomodModel.Base;assembly=FomodModel"
             d:DesignHeight="300"
             d:DesignWidth="1000"
             mc:Ignorable="d">

    <!--  xmlns:linq="clr-namespace:Linq2Sql;assembly=Linq2Sql"  -->
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="DataTemplates/HierarchicalDataTemplate.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TreeView x:Name="tw" DataContext="{Binding XmlData}" ItemsSource="{Binding XPath=Project/config}" />
        <ContentControl Grid.Column="1" Content="{Binding ElementName=tw, Path=SelectedItem}">
            <ContentControl.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="DataTemplates/ContentTemplate.xaml" />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </ContentControl.Resources>
        </ContentControl>
    </Grid>
</UserControl>
