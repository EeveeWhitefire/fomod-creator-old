<UserControl x:Class="Module.Editor.View.MainEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:base="clr-namespace:FomodModel.Base;assembly=FomodModel"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dialogs="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mcd="clr-namespace:FomodModel.Base.ModuleCofiguration;assembly=FomodModel"
             xmlns:regions="http://prismlibrary.com/"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:attaches="clr-namespace:FomodInfrastructure.MvvmLibrary.Attaches;assembly=FomodInfrastructure"
             d:DesignHeight="320"
             d:DesignWidth="1100"
             dialogs:DialogParticipation.Register="{Binding}"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270" />
            <ColumnDefinition Width="7*" />
        </Grid.ColumnDefinitions>
        <Rectangle Grid.ColumnSpan="220"
                   Height="1"
                   VerticalAlignment="Top"
                   Panel.ZIndex="99"
                   Fill="{DynamicResource AccentColorBrush}" />
        <Rectangle Grid.Column="0"
                   Width="1"
                   HorizontalAlignment="Right"
                   Panel.ZIndex="99"
                   Fill="{DynamicResource AccentColorBrush}" />
        <TreeView Grid.Column="0"
                  attaches:TreeViewHelper.SelectedItem="{Binding SelectedNode, Mode=TwoWay}"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  ItemsSource="{Binding Data}">
            <!--  Region TreeViewResources  -->
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type mcd:Plugin}">
                    <DockPanel Background="Transparent">
                        <Button Margin="3" x:Name="delete_button" 
                                VerticalAlignment="Center"
                                Command="{Binding DataContext.RemovePlugin, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=TreeView}}"
                                CommandParameter="{Binding}"
                                DockPanel.Dock="Right"
                                Style="{DynamicResource DeleteButton}" />
                        <TextBlock Height="16" Text="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged}"
                                   ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"
                                   TextTrimming="CharacterEllipsis" />
                    </DockPanel>
                    <HierarchicalDataTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="false">
                            <Setter TargetName="delete_button" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                    </HierarchicalDataTemplate.Triggers>
                </HierarchicalDataTemplate>
                <HierarchicalDataTemplate DataType="{x:Type mcd:Group}"
                                          ItemsSource="{Binding Plugins.Plugin}">
                    <DockPanel Background="Transparent">
                        <Button Margin="3" x:Name="delete_button" 
                                VerticalAlignment="Center"
                                DockPanel.Dock="Right"
                                Command="{Binding DataContext.RemoveGroup, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=TreeView}}"
                                CommandParameter="{Binding}"
                                Style="{DynamicResource DeleteButton}" />
                        <Button Margin="3" x:Name="add_button"
                                VerticalAlignment="Center"
                                Command="{Binding DataContext.AddPlugin, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=TreeView}}"
                                CommandParameter="{Binding}"
                                DockPanel.Dock="Right"
                                Style="{DynamicResource AddButton}" />
                        <TextBlock Height="16" VerticalAlignment="Center"
                                   Text="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged}"
                                   ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"
                                   TextTrimming="CharacterEllipsis" />
                    </DockPanel>
                    <HierarchicalDataTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="false">
                            <Setter TargetName="add_button" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="delete_button" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                    </HierarchicalDataTemplate.Triggers>
                </HierarchicalDataTemplate>
                <HierarchicalDataTemplate DataType="{x:Type mcd:InstallStep}"
                                          ItemsSource="{Binding OptionalFileGroups.Group}">
                    <DockPanel Background="Transparent">
                        <Button Margin="3" x:Name="delete_button" 
                                VerticalAlignment="Center"
                                Command="{Binding DataContext.RemoveStep, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=TreeView}}"
                                CommandParameter="{Binding}"
                                DockPanel.Dock="Right"
                                Style="{DynamicResource DeleteButton}" />
                        <Button Margin="3" x:Name="add_button" 
                                VerticalAlignment="Center"
                                DockPanel.Dock="Right"
                                Command="{Binding DataContext.AddGroup, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=TreeView}}"
                                CommandParameter="{Binding}"
                                Style="{DynamicResource AddButton}" />
                        <TextBlock Height="16" VerticalAlignment="Center"
                                   Text="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged}"
                                   ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"
                                   TextTrimming="CharacterEllipsis" />
                    </DockPanel>
                    <HierarchicalDataTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="false">
                            <Setter TargetName="add_button" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="delete_button" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                    </HierarchicalDataTemplate.Triggers>
                </HierarchicalDataTemplate>
                <HierarchicalDataTemplate DataType="{x:Type base:ProjectRoot}"
                                          ItemsSource="{Binding ModuleConfiguration.InstallSteps.InstallStep}">
                    <DockPanel Background="Transparent">
                        <Button Margin="3" x:Name="add_button" 
                                VerticalAlignment="Center" 
                                Command="{Binding DataContext.AddStep, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=TreeView}}"
                                CommandParameter="{Binding}"
                                DockPanel.Dock="Right"
                                Style="{DynamicResource AddButton}" />
                        <TextBlock Height="16" VerticalAlignment="Center" 
                                   Text="{Binding ModuleInformation.Name, UpdateSourceTrigger=PropertyChanged}"
                                   ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"
                                   TextTrimming="CharacterEllipsis" />
                    </DockPanel>
                    <HierarchicalDataTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="false">
                            <Setter TargetName="add_button" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                    </HierarchicalDataTemplate.Triggers>
                </HierarchicalDataTemplate>
            </TreeView.Resources>
            <!--  EndRegion  -->
            <TreeView.ItemContainerStyle>
                <Style TargetType="TreeViewItem" BasedOn="{StaticResource {x:Type TreeViewItem}}">
                    <Setter Property="IsExpanded" Value="True"/>
                </Style>
            </TreeView.ItemContainerStyle>
        </TreeView>
        <ContentControl Grid.Column="1"
                        regions:RegionManager.RegionName="NodeRegion" />
    </Grid>
</UserControl>