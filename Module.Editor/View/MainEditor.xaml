<UserControl x:Class="Module.Editor.View.MainEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Module.Editor.View"
             xmlns:linq2Xml="clr-namespace:System.Xml.Linq;assembly=System.Xml.Linq"
             xmlns:xmlsys="clr-namespace:System.Xml;assembly=System.Xml"
             xmlns:model="clr-namespace:FomodModel.Base;assembly=FomodModel"
             d:DesignHeight="300"
             d:DesignWidth="1000"
             mc:Ignorable="d">

    <!--  xmlns:linq="clr-namespace:Linq2Sql;assembly=Linq2Sql"  -->
    <UserControl.Resources>

        <HierarchicalDataTemplate DataType="config"
                                  ItemsSource="{Binding XPath=installSteps/installStep}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding XPath=moduleName, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="{Binding XPath=installSteps/@order, StringFormat=[Order: {0}]}" />
            </StackPanel>
        </HierarchicalDataTemplate>

        <HierarchicalDataTemplate DataType="installStep"
                                  ItemsSource="{Binding XPath=optionalFileGroups/group}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="installStep: " />
                <TextBlock Text="{Binding XPath=@name, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="{Binding XPath=optionalFileGroups/@order, StringFormat=[Order: {0}]}" />
            </StackPanel>
        </HierarchicalDataTemplate>

        <HierarchicalDataTemplate DataType="group"
                                  ItemsSource="{Binding XPath=plugins/plugin}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="group: " />
                <TextBlock Text="{Binding XPath=@name, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="{Binding XPath=@type, UpdateSourceTrigger=PropertyChanged, StringFormat=[Type: {0}]}" />
                <TextBlock Text="{Binding XPath=plugins/@order, StringFormat=[plugins Order: {0}]}" />
            </StackPanel>
        </HierarchicalDataTemplate>

        <HierarchicalDataTemplate DataType="plugin">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="plugin: " />
                <TextBlock Text="{Binding XPath=@name, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
        </HierarchicalDataTemplate>

    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TreeView x:Name="tw"
                  DataContext="{Binding XmlData}"
                  ItemsSource="{Binding XPath=Project/config}" />


        <ContentControl Grid.Column="1"
                        Content="{Binding ElementName=tw, Path=SelectedItem}">
            <ContentControl.Resources>
                <DataTemplate DataType="config">
                    <StackPanel>
                        <TextBox Text="{Binding XPath=moduleName, UpdateSourceTrigger=PropertyChanged}" />
                        <StackPanel DataContext="{Binding XPath=ancestor::node()/Project/fomod}">
                            <!--<TextBox Text="{Binding XPath=Name}" />-->
                            <TextBox Text="{Binding XPath=Author}" />
                            <TextBox Text="{Binding XPath=Version}" />
                            <TextBox Text="{Binding XPath=Website}" />
                            <TextBox Text="{Binding XPath=Description}" />

                            <ListBox ItemsSource="{Binding XPath=Groups}" />
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
    </Grid>
</UserControl>
