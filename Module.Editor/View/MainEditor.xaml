<UserControl x:Class="Module.Editor.View.MainEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:base="clr-namespace:FomodModel.Base;assembly=FomodModel"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dialogs="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mcd="clr-namespace:FomodModel.Base.ModuleCofiguration;assembly=FomodModel"
             xmlns:regions="http://prismlibrary.com/"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:attaches="clr-namespace:FomodInfrastructure.MvvmLibrary.Attaches;assembly=FomodInfrastructure"
             d:DesignHeight="300"
             d:DesignWidth="300"
             dialogs:DialogParticipation.Register="{Binding}"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="7*" />
        </Grid.ColumnDefinitions>
        <TreeView Grid.Column="0" ItemsSource="{Binding Data}"
                  attaches:TreeViewHelper.SelectedItem="{Binding SelectedNode, Mode=TwoWay}">
            <!-- Region TreeViewResources -->
            <TreeView.Resources>
                <HierarchicalDataTemplate x:Key="Plugin" DataType="{x:Type mcd:Plugin}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </HierarchicalDataTemplate>
                <HierarchicalDataTemplate DataType="{x:Type mcd:Group}"
                                          ItemTemplate="{StaticResource Plugin}"
                                          ItemsSource="{Binding Plugins.Plugin}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </HierarchicalDataTemplate>
                <HierarchicalDataTemplate DataType="{x:Type mcd:InstallStep}"
                                          ItemsSource="{Binding OptionalFileGroups.Group}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </HierarchicalDataTemplate>
                <!--<HierarchicalDataTemplate x:Key="Config"
                                          DataType="{x:Type base:ModuleConfiguration}"
                                          ItemTemplate="{StaticResource InstallStep}"
                                          ItemsSource="{Binding InstallSteps.InstallStep}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Module Configuration" />
                    </StackPanel>
                </HierarchicalDataTemplate>-->
                <HierarchicalDataTemplate x:Key="Info" DataType="{x:Type base:ModuleInformation}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Module Information" />
                    </StackPanel>
                </HierarchicalDataTemplate>
                <HierarchicalDataTemplate DataType="{x:Type base:ProjectRoot}"
                                          ItemsSource="{Binding ModuleConfiguration.InstallSteps.InstallStep}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding ModuleInformation.Name, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </HierarchicalDataTemplate>
            </TreeView.Resources>
            <!-- EndRegion-->
        </TreeView>
        <ContentControl Grid.Column="1" regions:RegionManager.RegionName="NodeRegion" />
    </Grid>
</UserControl>